<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="mail.AttachmentList" owl="1">
        <div class="o_AttachmentList">
            <t t-if="attachmentList">
                <div class="o_AttachmentList_partialList o_AttachmentList_partialListImages">
                    <t t-foreach="attachmentList.attachmentImagesView" t-as="attachmentImage" t-key="attachmentImage.localId">
                        <AttachmentImage class="o_AttachmentList_attachment" attachmentImageViewLocalId="attachmentImage.localId"/>
                    </t>
                </div>
                <div class="o_AttachmentList_partialList o_AttachmentList_partialListNonImages">
                    <t t-foreach="attachmentList.attachmentCardsView" t-as="attachmentCard" t-key="attachmentCard.localId">
                        <AttachmentCard class="o_AttachmentList_attachment" attachmentCardViewLocalId="attachmentCard.localId"/>
                    </t>
                </div>
                <div class="o_AttachmentList_partialList o_AttachmentList_preview">
                    <t t-foreach="attachmentList.attachmentLinkPreviewsView" t-as="attachmentLinkPreview" t-key="attachmentLinkPreview.localId">
                        <AttachmentLinkPreview class="o_AttachmentList_attachment" attachmentLinkPreviewViewLocalId="attachmentLinkPreview.localId"/>
                    </t>
                </div>
            </t>
        </div>
    </t>

</templates>
