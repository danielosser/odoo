<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="email_server_view_form" model="ir.ui.view">
        <field name="name">fetchmail_server_view_form</field>
        <field name="model">fetchmail.server</field>
        <field name="inherit_id" ref="fetchmail.view_email_server_form"/>
        <field name="arch" type="xml">
            <field name="server" position="before">
                <field name="is_gmail" string="Gmail" attrs="{'readonly': [('state', '=', 'done')]}"/>
            </field>
            <field name="user" position="after">
                <field string="Authorization Code" name="google_gmail_authorization_code" password="True"
                    attrs="{'required': [('is_gmail', '=', True)], 'invisible': [('is_gmail', '=', False)], 'readonly': [('state', '=', 'done')]}"
                    class="text-break mw-100"/>
                <field name="google_gmail_uri"
                    class="fa fa-arrow-right oe_edit_only"
                    widget="url"
                    text=" Get an Authorization Code"
                    attrs="{'invisible': ['|', ('is_gmail', '=', False), ('google_gmail_uri', '=', False)]}"
                    nolabel="1"/>
                <div class="alert alert-warning" role="alert"
                    attrs="{'invisible': ['|', ('is_gmail', '=', False), ('google_gmail_uri', '!=', False)]}">
                    Setup your Gmail API credentials to link a Gmail account.
                </div>
            </field>
            <field name="password" position="attributes">
                <attribute name="attrs">{'required' : [('server_type', '!=', 'local'), ('is_gmail', '=', False), ('password', '!=', False)], 'invisible' : [('is_gmail', '=', True)]}</attribute>
            </field>
        </field>
    </record>
</odoo>
