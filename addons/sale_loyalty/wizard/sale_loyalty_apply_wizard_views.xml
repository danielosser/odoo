<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_loyalty_apply_wizard_view_form" model="ir.ui.view">
        <field name="name">sale.loyalty.apply.wizard.view.form</field>
        <field name="model">sale.loyalty.apply.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="promo_code"/>
                        <button type="object" name="action_use_code" string="Use code"/>
                        <button type="object" name="action_make_auto" string="Automatic promotions"/>
                    </group>
                    <group>
                        <field name="line_ids" create="false" edit="true">
                            <tree>
                                <field name="program_id" readonly="1"/>
                                <field name="coupon_id" readonly="1"/>
                                <field name="require_reward" invisible="1"/>
                                <field name="no_reward" invisible="1"/>
                                <field name="reward_id" attrs="{'required': [('require_reward', '=', True)], 'readonly': [('no_reward', '=', True)]}"/>
                                <field name="multi_product" invisible="1"/>
                                <field name="forced_product_id" attrs="{'required': [('reward_id', '!=', False), ('multi_product', '=', True)], 'invisible': [('multi_product', '=', False)]}"/>
                            </tree>
                        </field>
                    </group>
                </sheet>
                <footer>
                    <button type="object" name="action_confirm" string="Apply Promotions" class="btn btn-primary"/>
                    <button special="cancel" string="Cancel" class="btn"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="sale_loyalty_apply_wizard_action" model="ir.actions.act_window">
        <field name="name">Apply coupons and loyalty programs</field>
        <field name="res_model">sale.loyalty.apply.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
