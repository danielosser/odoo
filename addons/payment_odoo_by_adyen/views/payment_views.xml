<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="acquirer_form_odoo_by_adyen" model="ir.ui.view">
            <field name="name">acquirer.form.odoo.by.adyen</field>
            <field name="model">payment.acquirer</field>
            <field name="inherit_id" ref="payment.acquirer_form"/>
            <field name="arch" type="xml">
                <xpath expr='//group[@name="acquirer"]' position='inside'>
                    <group attrs="{'invisible': [('provider', '!=', 'odoo_adyen')]}">
                        <button name="odoo_adyen_create_account" icon="fa-arrow-right" type="object" class="btn-link" string="Create an account in 1 minute"
                            attrs="{'invisible': [('odoo_adyen_account_id', '!=', False)]}"/>
                        <field name="odoo_adyen_account_id" readonly="1" attrs="{'invisible': [('odoo_adyen_account_id', '=', False)]}"/>
                        <field name="odoo_adyen_payout_id" attrs="{'invisible': [('odoo_adyen_account_id', '=', False)], 'required':[('provider', '=', 'odoo_adyen'), ('state', '=', 'enabled'), ('odoo_adyen_account_id', '!=', False)]}"/>
                    </group>
                </xpath>
            </field>
        </record>

    <record id="adyen_transaction_action" model="ir.actions.act_window">
        <field name="name">Adyen Transactions</field>
        <field name="res_model">adyen.transaction</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="adyen_payout_action" model="ir.actions.act_window">
        <field name="name">Adyen Payouts</field>
        <field name="res_model">adyen.payout</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="root_adyen_menu" name="Odoo Payments" parent="account.root_payment_menu" sequence="10" />
        <menuitem id="menu_adyen_transaction" parent="root_adyen_menu" action="adyen_transaction_action"/>
        <menuitem id="menu_adyen_payout" parent="root_adyen_menu" action="adyen_payout_action"/>
    </data>
</odoo>
