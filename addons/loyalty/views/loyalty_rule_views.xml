<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="loyalty_rule_view_form" model="ir.ui.view">
        <field name="name">loyalty.rule.view.form</field>
        <field name="model">loyalty.rule</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="product_ids" widget="many2many_tags"/>
                            <field name="product_category_id"/>
                            <!-- TODO: product tags -->
                        </group>
                        <group>
                            <label for="reward_point_amount"/>
                            <div class="row m-0">
                                <field name="reward_point_amount" class="oe_inline"/>
                                <field name="reward_point_name" class="oe_inline"/>
                            </div>
                            <!-- Align to the right -->
                            <label for="reward_point_mode" string=""/>
                            <field name="reward_point_mode" widget="radio" nolabel="1"/>
                        </group>
                        <group>
                            <field name="minimum_qty"/>
                            <label for="minimum_amount"/>
                            <div class="row m-0">
                                <field name="minimum_amount" class="oe_inline"/>
                                <span> tax </span><field name="minimum_amount_tax_mode" class="oe_inline col-lg-3"/>
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="loyalty_rule_view_kanban" model="ir.ui.view">
        <field name="name">loyalty.rule.view.kanban</field>
        <field name="model">loyalty.rule</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="currency_id"/>
                <field name="currency_symbol"/>
                <field name="product_ids"/>
                <field name="product_category_id"/>
                <field name="reward_point_amount"/>
                <field name="reward_point_name"/>
                <field name="reward_point_mode"/>
                <field name="minimum_qty"/>
                <field name="minimum_amount"/>
                <field name="minimum_amount_tax_mode"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click_edit">
                            <!-- Try to mimic form view -->
                            <div class="row m-0">
                                <div class="col-lg-6 o_group">
                                    <!-- Field product_ids -->
                                    <div class="row">
                                        <div class="col-4 o_td_label">
                                            <span t-att-class="'o_form_label' + (record.product_ids.raw_value.length ? '' : ' o_form_label_empty')">
                                                Products
                                            </span>
                                        </div>
                                        <div class="col-8">
                                            <field name="product_ids" widget="many2many_tags"/>
                                        </div>
                                    </div>
                                    <!-- Field product_category_id -->
                                    <div class="row">
                                        <div class="col-4 o_td_label">
                                            <span t-att-class="'o_form_label' + (record.product_category_id.raw_value ? '' : ' o_form_label_empty')">
                                                Category
                                            </span>
                                        </div>
                                        <div class="col-8">
                                            <field name="product_category_id"/>
                                        </div>
                                    </div>
                                    <!-- TODO: Field product tags -->
                                    <!-- <div class="row">
                                        <div class="col-4">
                                            <span class="o_form_label">Category</span>
                                        </div>
                                        <div class="col-8">
                                            <field name="product_category_id"/>
                                        </div>
                                    </div> -->
                                </div>
                                <div class="col-lg-6 o_group">
                                    <!-- Field reward_point_amount -->
                                    <div class="row">
                                        <div class="col-4 o_td_label">
                                            <span class="o_form_label">
                                                Reward
                                            </span>
                                        </div>
                                        <div class="col-8">
                                            <field name="reward_point_amount"/> <field name="reward_point_name"/>
                                        </div>
                                    </div>
                                    <!-- Field reward_point_mode -->
                                    <div class="row">
                                        <div class="col-4"/> <!-- No label -->
                                        <div class="col-8 o_field_radio o_vertical o_field_widget o_quick_editable o_required_modifier">
                                            <div id="order_checkbox" class="custom-control custom-radio o_radio_item">
                                                <input t-if="record.reward_point_mode.raw_value == 'order'" checked="1" type="radio" id="order" class="custom-control-input o_radio_input"/>
                                                <input t-else="" type="radio" id="order" class="custom-control-input o_radio_input"/>
                                                <span class="custom-control-label o_form_label">per order</span>
                                            </div>
                                            <div id="money_checkbox" class="custom-control custom-radio o_radio_item">
                                                <input t-if="record.reward_point_mode.raw_value == 'money'" checked="1" type="radio" id="money" class="custom-control-input o_radio_input"/>
                                                <input t-else="" type="radio" id="money" class="custom-control-input o_radio_input"/>
                                                <span class="custom-control-label o_form_label">per <field name="currency_symbol"/> spent</span>
                                            </div>
                                            <div id="unit_checkbox" class="custom-control custom-radio o_radio_item">
                                                <input t-if="record.reward_point_mode.raw_value == 'unit'" checked="1" type="radio" id="unit" class="custom-control-input o_radio_input"/>
                                                <input t-else="" type="radio" id="unit" class="custom-control-input o_radio_input"/>
                                                <span class="custom-control-label o_form_label">per unit paid</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row m-0">
                                <div class="col-lg-6 o_group">
                                    <!-- Field minimum_qty -->
                                    <div class="row">
                                        <div class="col-4 o_td_label">
                                            <span class="o_form_label">Minimum Qty</span>
                                        </div>
                                        <div class="col-8">
                                            <field name="minimum_qty"/>
                                        </div>
                                    </div>
                                    <!-- Field minimum_amount + minimum_amount_tax_mode -->
                                    <div class="row">
                                        <div class="col-4 o_td_label">
                                            <span class="o_form_label">Minimum Purchase</span>
                                        </div>
                                        <div class="col-8">
                                            <field name="minimum_amount" widget="monetary"/> <field name="minimum_amount_tax_mode"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
