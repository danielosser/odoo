            <field name="res_field">icon</field>
            <field name="public" eval="True"/>
            <field name="type">url</field>
            <field name="url">/hr_holidays/static/src/img/icons/icon4.svg</field>
        </record>
        <record id="icon_5" model="ir.attachment">
            <field name="name">icon5.svg</field>
            <field name="res_model">hr.leave.type</field>
            <field name="res_field">icon</field>
            <field name="public" eval="True"/>
            <field name="type">url</field>
            <field name="url">/hr_holidays/static/src/img/icons/icon5.svg</field>
        </record>
    </data>
</odoo>
