<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.AttachmentImage" owl="1">
        <div>
            <t t-if="attachmentImageView">
                <div class="o_AttachmentImage d-flex o-details-overlay position-relative"
                    t-att-class="{
                        'o-isUploading': attachmentImageView.attachment.isUploading,
                    }"
                    t-att-title="attachmentImageView.attachment.displayName ? attachmentImageView.attachment.displayName : undefined"
                    t-att-data-id="attachmentImageView.attachment.localId"
                    t-on-click="attachmentImageView.onClickImage"
                    t-att-data-mimetype="attachmentImageView.attachment.mimetype"
                >
                    <t t-if="!attachmentImageView.attachment.isUploading">
                        <img class="img img-fluid" t-att-src="attachmentImageView.imageUrl" t-att-alt="attachmentImageView.attachment.name" t-attf-style="max-width: min(100%, {{ attachmentImageView.width }}px); max-height: {{ attachmentImageView.height }}px;"/>
                    </t>
                    <t t-if="attachmentImageView.attachment.isUploading">
                        <div class="o_AttachmentImageUploading d-flex align-items-center justify-content-center position-absolute" title="Uploading">
                            <i class="fa fa-spin fa-spinner"/>
                        </div>
                    </t>
                    <div class="o_AttachmentImage_imageOverlay d-flex flex-row justify-content-end position-absolute">
                        <div class="o_AttachmentImage_actions d-flex flex-column">
                            <t t-if="attachmentImageView.attachment.isEditable">
                                <div class="o_AttachmentImage_action o_AttachmentImage_actionUnlink text-center"
                                     t-att-class="{'o-pretty': attachmentImageView.attachmentList.composerView}" t-on-click="attachmentImageView.onClickUnlink" title="Remove"
                                >
                                    <i class="fa fa-trash"/>
                                </div>
                            </t>
                        </div>
                    </div>
                    <t t-if="attachmentImageView.hasDeleteConfirmDialog">
                        <AttachmentDeleteConfirmDialog
                            attachmentLocalId="attachmentImageView.attachment.localId"
                            t-on-dialog-closed="attachmentImageView.onDeleteConfirmDialogClosed"
                        />
                    </t>
                </div>
            </t>
        </div>
    </t>
</templates>
