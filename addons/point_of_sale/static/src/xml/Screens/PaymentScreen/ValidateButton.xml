<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="point_of_sale.ValidateButton" owl="1">
        <t t-if="!env.isMobile">
            <div class="button next" t-att-class="{ highlight: _order.is_paid() and _order._isValidEmptyOrder() }"
                t-on-click="trigger('validate-order')">
                <span class="next_text">Validate</span>
                <i class="fa fa-angle-double-right fa-fw"></i>
            </div>
        </t>
        <t t-else="">
            <button class="btn-switchpane"
                t-att-class="{ secondary: !(_order.is_paid() and _order._isValidEmptyOrder()) }"
                t-on-click="trigger('validate-order')">
                <h1>Validate</h1>
            </button>
        </t>
    </t>

</templates>
