<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="partner_demo_company_ru" model="res.partner">
        <field name="name">RU Company</field>
        <field name="vat">0276153050</field>
        <field name="street">Mendeleeva 219, k.3</field>
        <field name="city">Ufa</field>
        <field name="country_id" ref="base.ru"/>
        <field name="zip">450071</field>
        <field name="phone">+7 347 2588257</field>
        <field name="email">info@roga-i-kopyta.example</field>
        <field name="website">www.roga-i-kopyta.example</field>
    </record>

    <record id="demo_company_ru" model="res.company">
        <field name="name">RU Company</field>
        <field name="partner_id" ref="partner_demo_company_ru"/>
    </record>

    <function model="res.company" name="_onchange_country_id">
        <value eval="[ref('demo_company_ru')]"/>
    </function>

    <function model="res.users" name="write">
        <value eval="[ref('base.user_root'), ref('base.user_admin'), ref('base.user_demo')]"/>
        <value eval="{'company_ids': [(4, ref('l10n_ru.demo_company_ru'))]}"/>
    </function>

    <function model="account.chart.template" name="try_loading">
        <value eval="ref('l10n_ru.l10n_ru_account_chart_template')"/>
        <value model="res.company" eval="obj().env.ref('l10n_ru.demo_company_ru')"/>
    </function>
</odoo>
