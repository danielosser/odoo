<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.AttachmentCard" owl="1">
        <div>
            <t t-if="attachmentCardView">
                <div class="o_AttachmentCard d-flex o-has-card-details"
                     t-att-class="{
                            'o-downloadable': !attachmentCardView.attachmentList.composerView,
                            'o-isUploading': attachmentCardView.attachment.isUploading,
                            'o-viewable': attachmentCardView.attachment.isViewable,
                            }" t-att-title="attachmentCardView.attachment.displayName ? attachmentCardView.attachment.displayName : undefined" t-att-data-id="attachmentCardView.attachment.localId"
                >
                    <!-- Image style-->
                    <!-- o_image from mimetype.scss -->
                    <div class="o_AttachmentCard_image o_image" t-on-click="attachmentCardView.onClickImage" t-att-class="{'o-attachment-viewable': attachmentCardView.attachment.isViewable,}" t-att-data-mimetype="attachmentCardView.attachment.mimetype">
                    </div>
                    <!-- Attachment details -->
                    <div class="o_AttachmentCard_details d-flex justify-content-center">
                        <t t-if="attachmentCardView.attachment.displayName">
                            <div class="o_AttachmentCard_filename overflow-hidden text-nowrap">
                                <t t-esc="attachmentCardView.attachment.displayName"/>
                            </div>
                        </t>
                        <t t-if="attachmentCardView.attachment.extension">
                            <div class="o_AttachmentCard_extension text-uppercase">
                                <t t-esc="attachmentCardView.attachment.extension"/>
                            </div>
                        </t>
                    </div>
                    <!-- Attachment aside -->
                    <t t-if="(!attachmentCardView.attachmentList.composerView or attachmentCardView.attachment.isEditable)">
                        <div class="o_AttachmentCard_aside position-relative overflow-hidden" t-att-class="{ 'o-has-multiple-action d-flex flex-column': !attachmentCardView.attachmentList.composerView and attachmentCardView.attachment.isEditable }">
                            <!-- Uploading icon -->
                            <t t-if="attachmentCardView.attachment.isUploading and attachmentCardView.attachmentList.composerView">
                                <div class="o_AttachmentCard_asideItem o_AttachmentCard_asideItemUploading d-flex justify-content-center align-items-center" title="Uploading">
                                    <i class="fa fa-spin fa-spinner"/>
                                </div>
                            </t>
                            <!-- Uploaded icon -->
                            <t t-if="!attachmentCardView.attachment.isUploading and attachmentCardView.attachmentList.composerView">
                                <div class="o_AttachmentCard_asideItem o_AttachmentCard_asideItemUploaded d-flex justify-content-center align-items-center" title="Uploaded">
                                    <i class="fa fa-check"/>
                                </div>
                            </t>
                            <!-- Remove button -->
                            <t t-if="attachmentCardView.attachment.isEditable">
                                <div class="o_AttachmentCard_asideItem o_AttachmentCard_asideItemUnlink d-flex justify-content-center align-items-center" t-att-class="{ 'o-pretty position-absolute': attachmentCardView.attachmentList.composerView }" t-on-click="attachmentCardView.onClickUnlink" title="Remove">
                                    <i class="fa fa-trash"/>
                                </div>
                            </t>
                            <!-- Download button -->
                            <t t-if="!attachmentCardView.attachmentList.composerView and !attachmentCardView.attachment.isUploading">
                                <div class="o_AttachmentCard_asideItem o_AttachmentCard_asideItemDownload d-flex justify-content-center align-items-center" t-on-click="attachmentCardView.attachment.onClickDownload" title="Download">
                                    <i class="fa fa-download"/>
                                </div>
                            </t>
                        </div>
                    </t>
                    <t t-if="attachmentCardView.hasDeleteConfirmDialog">
                        <AttachmentDeleteConfirmDialog
                            attachmentLocalId="attachmentCardView.attachment.localId"
                            t-on-dialog-closed="attachmentCardView.onDeleteConfirmDialogClosed"
                        />
                    </t>
                </div>
            </t>
        </div>
    </t>
</templates>
