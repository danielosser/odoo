            <field name="url">/hr_holidays/static/src/img/icons/icon2.svg</field>
        </record>
        <record id="icon_3" model="ir.attachment">
            <field name="name">icon3.svg</field>
            <field name="res_model">hr.leave.type</field>
            <field name="res_field">icon</field>
            <field name="public" eval="True"/>
            <field name="type">url</field>
            <field name="url">/hr_holidays/static/src/img/icons/icon3.svg</field>
        </record>
        <record id="icon_4" model="ir.attachment">
            <field name="name">icon4.svg</field>
